[package]
name = "{{project-name}}"
version = "0.1.0"
authors = [""]
edition = "2021"

# See more keys and their definitions at https://doc.rust-lang.org/cargo/reference/manifest.html

[dependencies]
dioxus = { version = "0.7.1", features = ["router", "fullstack"] }
axum = { version = "0.8", optional = true }
tokio = { version = "1.0", features = ["full"], optional = true }
serde = { version = "1.0", features = ["derive"] }
{% if use-auth %}sqlx = { version = "0.8.6", features = ["sqlite", "runtime-tokio-rustls"], optional = true }
openidconnect = { version = "3.0", optional = true }
tower-cookies = { version = "0.11", features = ["private", "axum-core"], optional = true }
serde_json = { version = "1.0", optional = true }
url = { version = "2.5", optional = true }
reqwest = { version = "0.12", default-features = false, features = ["json", "rustls-tls"], optional = true }
base64 = { version = "0.22", optional = true }
rand = { version = "0.8", optional = true }
dotenvy = { version = "0.15.7", optional = true }
{% endif %}

[features]
default = ["web"]
# The feature that are only required for the web = ["dioxus/web"] build target should be optional and only enabled in the web = ["dioxus/web"] feature
web = ["dioxus/web"]
# The feature that are only required for the desktop = ["dioxus/desktop"] build target should be optional and only enabled in the desktop = ["dioxus/desktop"] feature
desktop = ["dioxus/desktop"]
# The feature that are only required for the mobile = ["dioxus/mobile"] build target should be optional and only enabled in the mobile = ["dioxus/mobile"] feature
mobile = ["dioxus/mobile"]
{% if use-auth %}server = ["dioxus/server", "dep:axum", "dep:tokio", "dep:sqlx", "dep:openidconnect", "dep:tower-cookies", "dep:serde_json", "dep:url", "dep:reqwest", "dep:base64", "dep:rand", "dep:dotenvy"]
{% else %}server = ["dioxus/server", "dep:axum", "dep:tokio"]
{% endif %}

[profile]

[profile.wasm-dev]
inherits = "dev"
opt-level = 1

[profile.server-dev]
inherits = "dev"

[profile.android-dev]
inherits = "dev"
